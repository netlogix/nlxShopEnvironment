<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Normalizer -->
        <service
                id="sd.shop_environment.serializer.normalizer.object_normalizer"
                class="Symfony\Component\Serializer\Normalizer\ObjectNormalizer"
        >
        </service>

        <service
                id="sd.shop_environment.serializer.normalizer.country_normalizer"
                class="sdShopEnvironment\Serializer\Normalizer\CountryNormalizer"
        >
            <argument type="service" id="models"/>
        </service>
        <service
                id="sd.shop_environment.serializer.normalizer.shop_normalizer"
                class="sdShopEnvironment\Serializer\Normalizer\ShopNormalizer"
        >
            <argument type="service" id="models"/>
        </service>

        <service
                class="sdShopEnvironment\Serializer\Normalizer\PaymentNormalizer"
                id="sd.shop_environment.serializer.normalizer.payment_normalizer"
        >
            <call method="setIgnoredAttributes">
                <argument type="collection">
                    <argument type="string">id</argument>
                    <argument type="string">name</argument> <!-- already used as array key -->
                    <argument type="string">ruleSets</argument>
                    <argument type="string">paymentInstances</argument>
                    <argument type="string">paymentData</argument>
                    <argument type="string">plugin</argument>
                    <argument type="string">attribute</argument>
                </argument>
            </call>
        </service>

        <service
                class="sdShopEnvironment\Serializer\Normalizer\DispatchNormalizer"
                id="sd.shop_environment.serializer.normalizer.dispatch_normalizer"
        >
            <call method="setIgnoredAttributes">
                <argument type="collection">
                    <argument type="string">id</argument> <!-- already used as array key -->
                    <argument type="string">categories</argument>
                    <argument type="string">holidays</argument>
                    <argument type="string">attribute</argument>
                </argument>
            </call>
        </service>

        <service
                class="sdShopEnvironment\Serializer\Normalizer\ShippingCostNormalizer"
                id="sd.shop_environment.serializer.normalizer.shipping_cost_normalizer"
        >
            <argument type="service" id="sd.shop_environment.serializer.normalizer.object_normalizer"/>
            <argument type="service" id="models"/>
        </service>

        <service
                id="sd.shop_environment.serializer.normalizer.dispatch_payment_normalizer"
                class="sdShopEnvironment\Serializer\Normalizer\DispatchPaymentNormalizer"
        >
            <argument id="models" type="service"/>
        </service>

        <service
                id="sd.shop_environment.serializer.normalizer.custom_facet_normalizer"
                class="sdShopEnvironment\Serializer\Normalizer\CustomFacetNormalizer"
        >
        </service>

        <service
                id="sd.shop_environment.serializer.normalizer.payment_rules"
                class="sdShopEnvironment\Serializer\Normalizer\PaymentRuleNormalizer"
        >
            <call method="setIgnoredAttributes">
                <argument type="collection">
                    <argument type="string">paymentId</argument>
                </argument>
            </call>
        </service>

        <!-- Denormalizer -->
        <service
                id="sd.shop_environment.serializer.denormalizer.array_denormalizer"
                class="Symfony\Component\Serializer\Normalizer\ArrayDenormalizer"
                shared="false"
        />
        <!-- Serializer -->
        <service
                id="sd.shop_environment.serializer.serializer.payment_serializer"
                class="Symfony\Component\Serializer\Serializer"
        >
            <argument type="collection">
                <argument type="service" id="sd.shop_environment.serializer.normalizer.shop_normalizer" />
                <argument type="service" id="sd.shop_environment.serializer.normalizer.country_normalizer" />
                <argument type="service" id="sd.shop_environment.serializer.normalizer.payment_normalizer" />
                <argument type="service" id="sd.shop_environment.serializer.denormalizer.array_denormalizer" />
            </argument>
        </service>

        <service
                id="sd.shop_environment.serializer.serializer.dispatch_serializer"
                class="Symfony\Component\Serializer\Serializer"
        >
            <argument type="collection">
                <argument type="service" id="sd.shop_environment.serializer.normalizer.country_normalizer" />
                <argument type="service" id="sd.shop_environment.serializer.normalizer.shipping_cost_normalizer" />
                <argument type="service" id="sd.shop_environment.serializer.normalizer.dispatch_payment_normalizer" />
                <argument type="service" id="sd.shop_environment.serializer.normalizer.dispatch_normalizer" />
                <argument type="service" id="sd.shop_environment.serializer.denormalizer.array_denormalizer" />
            </argument>
        </service>

        <service
                id="sd.shop_environment.serializer.serializer.custom_facet_serializer"
                class="Symfony\Component\Serializer\Serializer"
        >
            <argument type="collection">
                <argument type="service" id="sd.shop_environment.serializer.normalizer.custom_facet_normalizer" />
                <argument type="service" id="sd.shop_environment.serializer.denormalizer.array_denormalizer" />
            </argument>
        </service>
        <service
                id="sd.shop_environment.serializer.serializer.payment_rules"
                class="Symfony\Component\Serializer\Serializer"
        >
            <argument type="collection">
                <argument type="service" id="sd.shop_environment.serializer.normalizer.dispatch_payment_normalizer" />
                <argument type="service" id="sd.shop_environment.serializer.normalizer.payment_rules" />
                <argument type="service" id="sd.shop_environment.serializer.denormalizer.array_denormalizer" />
            </argument>
        </service>
    </services>
</container>
