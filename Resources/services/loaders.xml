<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service
                id="sd_shop_environment.loader.shop_config_loader"
                class="sdShopEnvironment\Loader\ShopConfigLoader"
        >
            <argument type="service" id="models" />
        </service>
        <service
                id="sd_shop_environment.loader.core_config_loader"
                class="sdShopEnvironment\Loader\CoreConfigLoader"
        >
            <argument type="service" id="dbal_connection" />
            <argument type="service" id="models" />
            <argument type="service" id="config_writer" />
        </service>
        <service
                id="sd_shop_environment.loader.theme_config_loader"
                class="sdShopEnvironment\Loader\ThemeConfigLoader"
        >
            <argument type="service" id="models" />
            <argument type="service" id="sd_shop_environment.logger" />
        </service>
        <service
                id="sd_shop_environment.loader.productivity_mode_config_loader"
                class="sdShopEnvironment\Loader\ProductivityModeConfigLoader"
        >
            <argument type="service" id="models" />
            <argument type="service" id="shopware.plugin_manager" />
        </service>
        <service
                id="sd.shop_environment.loader.payment_methods_loader"
                class="sdShopEnvironment\Loader\PaymentMethodsLoader"
        />
    </services>
</container>
