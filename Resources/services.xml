<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <!-- Helper-Services -->
        <service id="sd_shop_environment.services.configuration_dumper" class="sdShopEnvironment\Services\ConfigurationDumper">
            <argument type="service" key="$entityManager" id="models"/>
            <argument type="service" key="$configWriter" id="config_writer"/>
        </service>
        <service id="sd_shop_environment.services.configuration_loader" class="sdShopEnvironment\Services\ConfigurationLoader">
            <argument type="service" key="$entityManager" id="models"/>
            <argument type="service" key="$configWriter" id="config_writer"/>
            <argument type="service" key="$connection" id="dbal_connection"/>
        </service>
        <!-- Commands -->
        <service
                id="sd_shop_environment.commands.shop_environment_dump_config_command"
                class="sdShopEnvironment\Commands\ShopEnvironmentDumpConfigCommand"
        >
            <argument type="service" id="sd_shop_environment.services.configuration_dumper"/>
            <tag name="console.command"/>
        </service>
        <service
                id="sd_shop_environment.commands.shop_environment_load_config_command"
                class="sdShopEnvironment\Commands\ShopEnvironmentLoadConfigCommand"
        >
            <argument type="service" id="sd_shop_environment.services.configuration_loader"/>
            <tag name="console.command"/>
        </service>
    </services>
</container>
