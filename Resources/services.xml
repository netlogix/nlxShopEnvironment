<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <!-- Dumping-Services -->
        <service id="sd_shop_environment.services.configuration_dumper" class="sdShopEnvironment\Services\ConfigurationDumper">
            <argument type="service" id="service_container"/>
        </service>
        <!-- Commands -->
        <service id="sd_shop_environment.commands.shop_environment" class="sdShopEnvironment\Commands\ShopEnvironmentDumpConfigCommand">
            <argument type="service" id="sd_shop_environment.services.configuration_dumper"/>
            <argument type="string">%kernel.root_dir%/var/export</argument>
            <tag name="console.command" />
        </service>
    </services>
</container>